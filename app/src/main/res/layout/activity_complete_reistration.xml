<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="khalidalasiri.drd10.CompleteRegistration"
    android:background="@drawable/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:layout_margin="@dimen/dp5"
            android:text="@string/personalInfo"
            android:textColor="@color/red"
            android:textSize="@dimen/spTitle"/>

        <EditText
            android:id="@+id/username"
            style="@style/submitForm"
            android:hint="@string/username"/>
        <EditText
            android:id="@+id/fristname"
            style="@style/submitForm"
            android:hint="@string/fristname"/>
        <EditText
            android:id="@+id/fathername"
            style="@style/submitForm"
            android:hint="@string/fathername"/>
        <EditText
            android:id="@+id/grandfathername"
            style="@style/submitForm"
            android:hint="@string/grandfathername"/>
        <EditText
            android:id="@+id/familyname"
            style="@style/submitForm"
            android:hint="@string/familyname"/>

    </LinearLayout>

</ScrollView>
